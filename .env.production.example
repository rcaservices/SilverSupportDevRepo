# Production Environment Variables for AWS Deployment

# Core Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database (AWS RDS)
DATABASE_URL=postgresql://username:password@host:5432/database

# Security (Generate secure random strings)
JWT_SECRET=your-256-bit-secret-key-here
ENCRYPTION_KEY=exactly-32-characters-long-key
SESSION_SECRET=your-session-secret-key-here

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://alpha.silverzupport.us/webhooks/twilio

# AI Services
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Voice Services (Optional)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus

# AWS Configuration
AWS_REGION=us-east-1
S3_VOICE_BUCKET=silverzupport-voice-recordings
S3_LOGS_BUCKET=silverzupport-logs
S3_BACKUPS_BUCKET=silverzupport-backups
AWS_SECRETS_MANAGER_ENABLED=true
AWS_SECRET_NAME=silverzupport/production

# Application Features
ENABLE_VOICE_AUTH=true
ENABLE_ANALYTICS=true
ENABLE_FAMILY_PORTAL=true
ENABLE_CALL_RECORDING=false

# Security
CORS_ORIGINS=https://silverzupport.us,https://alpha.silverzupport.us,https://admin.silverzupport.us
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
