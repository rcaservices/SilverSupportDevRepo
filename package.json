{
  "name": "ai-technical-support-voice-auth",
  "version": "2.0.0",
  "description": "AI-powered technical support service with voice authentication for seniors",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup:db": "node scripts/setupDatabase.js",
    "migrate": "node scripts/runMigrations.js",
    "migrate:voice-auth": "psql $DATABASE_URL -f src/database/migrations/003_add_voice_authentication.sql",
    "import-faq": "node scripts/importFAQ.js",
    "seed:test-data": "node scripts/seedTestData.js"
  },
  "keywords": [
    "ai",
    "technical-support",
    "voice-authentication",
    "seniors",
    "twilio",
    "whisper",
    "claude"
  ],
  "author": "Richard Asp",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "openai": "^5.11.0",
    "pg": "^8.16.3",
    "twilio": "^4.23.0",
    "uuid": "^11.1.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/migrations/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
